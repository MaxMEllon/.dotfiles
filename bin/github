#!/bin/bash

which opener &> /dev/null
if [ $? -ne 0 ]; then
  npm install -g opener
fi

case $# in
  0 )
    opener https://github.com/MaxMEllon
    ;;
  1 )
    opener https://github.com/MaxMEllon/$1
    ;;
  * )
    printf "
    Error: Wrong number of arguments. Expected 0, got $#

      Usage:
        $ github
        $ github [reponame]

      Ex:
        $ github .vim

    \n"
    ;;
esac

