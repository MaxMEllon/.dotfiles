#!/bin/bash

if [[ ! -f package.json ]]; then
  yarn init
fi

yarn add --dev eslint \
       eslint-config-prettier \
       eslint-plugin-react \
       eslint-plugin-prettier \
       prettier \
       babel-eslint &

wget https://raw.githubusercontent.com/MaxMEllon/.dotfiles/master/eslint/.eslintrc.yml &
wget https://raw.githubusercontent.com/MaxMEllon/.dotfiles/master/prettier/.prettierrc.yml &

wait
